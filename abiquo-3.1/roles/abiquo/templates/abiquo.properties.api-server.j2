[server]
# Abiquo session
abiquo.auth.module = abiquo
abiquo.server.sessionTimeout = 60

## Abiquo API location
abiquo.server.api.location = {{ abiquo_http_protocol }}://{{ ansible_default_ipv4.address }}:{{ abiquo_tomcat_http_port }}/api

# Credentials encryption
{% if abiquo_security_encrypt %}
abiquo.security.encrypt=true
{% endif %}

# Redis configuration
abiquo.redis.port = {{ abiquo_redis_port }}
abiquo.redis.host = {{ abiquo_redis_host }}

# RabbitMQ configuration
abiquo.rabbitmq.port = {{ abiquo_rabbitmq_port }}
abiquo.rabbitmq.host = {{ abiquo_rabbitmq_host }}
abiquo.rabbitmq.password = guest

# Mail server default configuration
abiquo.server.mail.server = 127.0.0.1
abiquo.server.mail.password = none
abiquo.server.mail.user = none@none.es

# M identity credentials
abiquo.m.identity=admin
abiquo.m.credential=xabiquo
