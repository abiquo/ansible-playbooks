global
  user haproxy
  group haproxy
  log /dev/log local0
  maxconn 1024

frontend public
  bind {{ haproxy_listen_address }}:{{ haproxy_listen_port }} ssl crt {{ haproxy_cert_file }}
  mode http
  timeout client 3600s
  log global
{% for path, value in haproxy_paths.iteritems() %}
{% if path == 'default' %}
  default_backend ws
{% else %}
  acl {{ path|replace("/","_") }} path {{ path|replace("/","_") }}
  use_backend {{ path|replace("/","_") }} if {{ path|replace("/","_") }}
{% endif %}
{% endfor %}

{% for path, value in haproxy_paths.iteritems() %}
{% if path == 'default' %}
backend ws
  balance source
  mode http
  log global
  timeout queue 3600s
  timeout server 3600s
  timeout connect 3600s
{% for server in value.servers %}
  server websockify{{ loop.index }} {{ server }} weight 1 maxconn 1024 check
{% endfor %}
{% else %}
backend {{ path|replace("/","_") }}
  balance source
  mode http
  log global
  timeout queue 3600s
  timeout server 3600s
  timeout connect 3600s
{% for server in value.servers %}
  server websockify{{ loop.index }} {{ server }} weight 1 maxconn 1024 check
{% endfor %}
{% endif %}
{% endfor %}